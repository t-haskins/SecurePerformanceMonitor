<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.secureperformancemonitor">

    <!-- Permissions to enable Bluetooth -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- Location access is required for bluetooth functionality -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Declares app is only available to BLE devices -->
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        <service
            android:name=".BluetoothLeService"
            android:enabled="true"
            android:exported="true">
        </service>

        <activity android:name=".PerformanceMetricsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DeviceScanActivity"
            android:parentActivityName="com.example.secureperformancemonitor.PerformanceMetricsActivity">
        </activity>

        <activity
            android:name=".DevicePopupActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert">
        </activity>

        <activity
            android:name=".RawDataPopupActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert">
        </activity>

        <activity
            android:name=".PasswordPopupActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert">
        </activity>

    </application>

</manifest>